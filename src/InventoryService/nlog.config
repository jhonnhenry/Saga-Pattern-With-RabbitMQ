<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwConfigExceptions="true">

  <variable name="logDirectory" value="${basedir}/logs"/>

  <targets>
    <!-- File target -->
    <target name="file" xsi:type="File"
            fileName="${logDirectory}/${shortdate}.log"
            layout="${date:format=yyyy-MM-dd HH\:mm\:ss} [${level:uppercase=true}] ${logger} - ${message} ${exception:format=tostring}"/>

    <!-- Console target -->
    <target name="console" xsi:type="Console"
            layout="${date:format=HH\:mm\:ss} [${level:uppercase=true}] ${logger} - ${message}"/>
  </targets>

  <rules>
    <logger name="*" minlevel="Debug" writeTo="file,console"/>
    <logger name="Microsoft.*" minlevel="Warning" writeTo="console"/>
  </rules>
</nlog>
